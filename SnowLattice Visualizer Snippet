import numpy as np
import matplotlib.pyplot as plt

def snowflake_lattice(size=200, iterations=4):
    img = np.zeros((size, size))
    center = size // 2
    for i in range(size):
        for j in range(size):
            dx, dy = abs(i - center), abs(j - center)
            dist = max(dx, dy, (dx + dy) // 2)  # Hex-like symmetry
            if dist == 0: 
                img[i, j] = 1
                continue
            if any(dist % (2**k) == 0 for k in range(1, iterations+1)):
                img[i, j] = 0.8  # Prime-ish survival
    return img

plt.figure(figsize=(8,8), facecolor='black')
plt.imshow(snowflake_lattice(), cmap='Blues_r', origin='lower')
plt.axis('off')
plt.title("Infinite Presents Falling as Snow")
plt.show()
